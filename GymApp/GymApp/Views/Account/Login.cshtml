@using GymApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col">
        <p>
            <h4> Log in to your account</h4>
        </p>
        @if(TempData["Error"] !=null)
        {
            <div class = "col alert alert-danger"> 
            <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="border p-3 mt-4">
                <div class="row">
                    <h2 class="text-primary">
                        Log In
                    </h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="text" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px">Confirm</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to the list</a>
            </div>
        </form>
    </div>
</div>