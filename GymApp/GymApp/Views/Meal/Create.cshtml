@model List<Product>
@{
    ViewData["Title"] = "Dynamic Autocomplete Search";
}

<div id="searchBar">
    <input type="text" id="searchInput" placeholder="Search products..." />
    <div id="searchResults"></div>
</div>
<div id="productAttributes"></div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    kcal
                </th>
                <th>
                    protein
                </th>
                <th>
                    carbs
                </th>
                <th>
                    fat
                </th>
                <th>
                    grams
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="ProductTable">

        </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <th><span id="TotalKcal">0</span></th>
            <th><span id="TotalProtein">0</span></th>
            <th><span id="TotalCarbs">0</span></th>
            <th><span id="TotalFat">0</span></th>
            <th><span id="TotalGrams">0</span></th>
            <th></th>
        </tr>
    </tfoot>
    </table>

<button type="submit" class="btn btn-primary" style="width:150px">Confirm</button>
   
@section Scripts {
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/SearchBar.js"></script>
<script src="~/js/productDetails.js"></script>
}
