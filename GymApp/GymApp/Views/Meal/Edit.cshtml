@model Product

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">
                Edit @Model.ProductName
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" type="text" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="kcal"></label>
            <input asp-for="kcal" type="text" class="form-control" />
            <span asp-validation-for="kcal" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="protein"></label>
            <input asp-for="protein" type="text" class="form-control" />
            <span asp-validation-for="protein" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="fat"></label>
            <input asp-for="fat" type="text" class="form-control" />
            <span asp-validation-for="fat" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="carbs"></label>
            <input asp-for="carbs" type="text" class="form-control" />
            <span asp-validation-for="carbs" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="grams"></label>
            <input asp-for="grams" type="text" class="form-control" />
            <span asp-validation-for="grams" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to the list</a>
    </div>
</form>